<p id="notice"><%= notice %></p>

<h1>SARAPP sa UP Store Database</h1>



<%= form_tag stores_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search store", :Store_Name => nil %>
  </p>
<% end %>


<table>
  <thead>
    <tr>
      <th>Store name</th>
      <th>Store location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.Store_Name %></td>
        <td><%= store.Store_Location %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Delete', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Store', new_store_path %>
